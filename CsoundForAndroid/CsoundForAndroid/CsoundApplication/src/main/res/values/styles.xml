<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="csoundSeekBar" parent="android:Widget.SeekBar">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>
    <style name="csoundButtonStyle" parent="@android:style/Widget.Button.Small">
        <item name="android:padding">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:backgroundTint">#aaabaa</item>
        <item name="android:layout_marginLeft">-3dip</item>
    	<item name="android:layout_marginRight">-3dip</item>
    </style>
	<style name="csoundAlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:textSize">20sp</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="csoundTheme" parent="android:Theme.DeviceDefault">
        <item name = "android:backgroundTint">#000000</item>
    </style>
</resources>
